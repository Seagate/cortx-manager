{
    "name": "s3accounts",
    "description": "Create Delete or Display Accounts in S3",
    "sub_commands": [
      {
        "name": "show",
        "description": "Displays S3 Accounts On the cli",
        "need_confirmation": false,
        "permissions_tag": "list",
        "args": [
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          },
          {
            "flag": "-f",
            "dest": "format",
            "help": "Format of Output",
            "default": "table",
            "type": "str",
            "choices": [
              "table",
              "xml",
              "json"
            ]
          }
        ],
        "comm": {
        "type":"rest",
          "method": "get",
          "target": "/{version}/s3_accounts",
          "version": "v2"
        },
        "output": {
          "table":{
            "headers":{
              "account_name":"Account Name",
              "account_email":"Account Email"
            },
            "filters": "s3_accounts"
          }
        }
      },
      {
        "name": "create",
        "description": "Create a new S3 Account.",
        "need_confirmation": true,
        "permissions_tag": "create",
        "args": [
          {
            "flag": "account_name",
            "type": "str",
            "help": "Name to be given to S3 account",
            "json": true
          },
          {
            "flag": "account_email",
            "type": "str",
            "help": "Email to be given to S3 account",
            "json": true
          },
          {
            "flag": "-p",
            "dest": "password",
            "type": "str",
            "type_method": "Terminal.get_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "help": "",
            "default": "",
            "suppress_help": true,
            "json": true
          },
          {
            "flag": "-f",
            "dest": "format",
            "help": "Format of Output",
            "default": "table",
            "type": "str",
            "choices": [
              "table",
              "xml",
              "json"
            ],
            "suppress_help": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          }
        ],
        "comm": {
          "type": "rest",
          "method": "post",
          "target": "/{version}/s3_accounts",
          "version": "v2"
        },
        "output": {
          "table":{
            "headers":{
              "account_name":"Account Name",
              "account_email":"Account Email",
              "account_id":"Account Id",
              "canonical_id":"Canonical Id",
              "access_key":"Permanent Access Key",
              "secret_key":"Permanent Secret Key"
            }
          }
        }
      },
      {
        "name": "password",
        "description": "Change/Reset password for S3 Account.",
        "need_confirmation": true,
        "permissions_tag": "update",
        "args": [
          {
            "flag": "account_name",
            "type": "str",
            "help": "Name of S3 account whose password want to be reset.",
            "json": true
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?",
            "help": ""
          },
          {
            "flag": "-p",
            "dest": "password",
            "type": "str",
            "type_method": "Terminal.get_password",
            "type_target": "cortx.utils.cli_framework.terminal",
            "help": "",
            "default": "",
            "suppress_help": true,
            "json": true
          },
          {
            "flag": "-f",
            "dest": "format",
            "help": "Format of Output",
            "default": "table",
            "type": "str",
            "choices": [
              "table",
              "xml",
              "json"
            ],
            "suppress_help": true
          }

        ],
        "comm": {
          "type": "rest",
          "method": "patch",
          "target": "/{version}/s3_accounts/{account_name}",
          "version": "v2"
        },
        "output": {
          "table":{
            "headers":{
              "account_name":"Account Name"
            }
          }
        }
      },
      {
        "name": "delete",
        "description": "Deletes the given S3 account",
        "need_confirmation": true,
        "permissions_tag": "delete",
        "args": [
          {
            "flag": "account_name",
            "type": "str",
            "help": "Name of the account to be Deleted."
          },
          {
            "flag": "args",
            "default": [],
            "suppress_help": true,
            "nargs": "?"
          }
        ],
        "comm": {
        "type": "rest",
          "method": "delete",
          "target": "/{version}/s3_accounts/{account_name}",
          "version": "v2"
        },
        "output": {
          "success": "Account Deleted."
        }
      }
    ]
  }
  
