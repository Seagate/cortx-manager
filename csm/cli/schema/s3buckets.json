{
  "name": "s3buckets",
  "description": "Bucket",
  "sub_commands": [
    {
      "name": "show",
      "description": "Displays S3 buckets On The CLI",
      "need_confirmation": false,
      "permissions_tag": "list",
      "args": [
        {
          "flag": "-f",
          "dest": "format",
          "help": "Format of Output",
          "default": "table",
          "type": "str",
          "choices": [
            "table",
            "xml",
            "json"
          ]
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "get",
        "target": "/{version}/s3/bucket",
        "version": "v2"
      },
      "output": {
        "table": {
          "headers": {
            "name": "Bucket Name"
          },
          "filters": "buckets"
        }
      }
    },
    {
      "name": "create",
      "description": "Create new S3 bucket",
      "need_confirmation": false,
      "permissions_tag": "create",
      "args": [
        {
          "flag": "bucket_name",
          "type": "str",
          "type_method": "Validators.bucket_name",
          "type_target": "csm.cli.cli_validators",
          "help": "Give a bucket name to create.",
          "json": true
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "post",
        "target": "/{version}/s3/bucket",
        "version": "v2"
      },
      "output": {
        "success": "Bucket created."
      }
    },
    {
      "name": "delete",
      "description": "Delete the bucket",
      "need_confirmation": false,
      "permissions_tag": "delete",
      "args": [
        {
          "flag": "bucket_name",
          "type": "str",
          "help": "Bucket Name"
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?"
        }
      ],
      "comm": {
        "type": "rest",
        "method": "delete",
        "target": "/{version}/s3/bucket/{bucket_name}",
        "version": "v2"
      },
      "output": {
        "success": "Bucket deleted."
      }
    }
  ]
}
 