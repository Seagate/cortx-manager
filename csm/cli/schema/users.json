{
    "name": "users",
    "description": "Users",
    "sub_commands": [
        {
            "name": "show",
            "description": "Shows user list",
            "need_confirmation": false,
            "permissions_tag": "list",
            "args": [
                {
                    "flag": "-o",
                    "type": "Validatiors.positive_int",
                    "dest": "offset",
                    "help": "Amount of users you want to get",
                    "params": true
                },
                {
                    "flag": "-l",
                    "type": "Validatiors.positive_int",
                    "dest": "limit",
                    "help": "Limit of amount of users you want to view",
                    "params": true
                },
                {
                    "flag": "-s",
                    "type": "str",
                    "dest": "sort_by",
                    "help": "Parameter by which you want to sort user list",
                    "choices": [
                        "user_id",
                        "user_type",
                        "created_time",
                        "updated_time"
                    ],
                    "params": true
                },
                {
                    "flag": "-d",
                    "type": "str",
                    "dest": "sort_dir",
                    "default": "asc",
                    "help": "Order by which you want to sort user list",
                    "choices": [
                        "desc",
                        "asc"
                    ],
                    "params": true
                },
                {
                    "flag": "-f",
                    "dest": "format",
                    "help": "Format of Output",
                    "default": "table",
                    "type": "str",
                    "choices": [
                        "table",
                        "xml",
                        "json"
                    ]
                },
                {
                    "flag": "args",
                    "default": [],
                    "nargs": "?",
                    "help": "Additional arguments that can be send to csm agent"
                }
            ],
            "comm": {
                "type": "rest",
                "method": "get",
                "target": "/{version}/csm/users",
                "version": "v1"
            },
            "output": {
                "table": {
                    "headers": {
                        "username": "Username",
                        "user_type": "User Type",
                        "roles": "Roles",
                        "created_time": "Creation time",
                        "updated_time": "Last update time"
                    },
                    "filters": "users"
                }
            }
        },
        {
            "name": "create",
            "description": "Creates user",
            "need_confirmation": true,
            "permissions_tag": "create",
            "args": [
                {
                    "flag": "username",
                    "type": "str",
                    "help": "Username for user used for Login.",
                    "json": true
                },
                {
                    "flag": "roles",
                    "type": "str",
                    "help": "Select an appropriate role for the user.\n Monitor provides viewing access. Manage provides editing access.",
                    "choices": [
                        "monitor",
                        "manage"
                    ],
                    "nargs": "*",
                    "json": true
                },
                {
                    "flag": "-p",
                    "dest": "password",
                    "type": "Terminal.get_password",
                    "help": "",
                    "default": "",
                    "suppress_help": true,
                    "json": true
                },
                {
                    "flag": "args",
                    "default": [],
                    "nargs": "?",
                    "help": "Additional arguments that can be send to csm agent"
                }
            ],
            "comm": {
                "type": "rest",
                "method": "post",
                "target": "/{version}/csm/users",
                "version": "v1"
            },
            "output": {
                "success": "User created"
            }
        },
        {
            "name": "delete",
            "description": "Delete user",
            "need_confirmation": true,
            "permissions_tag": "delete",
            "args": [
                {
                    "flag": "username",
                    "type": "str",
                    "help": "Username which you want to delete",
                    "json": true
                },
                {
                    "flag": "args",
                    "default": [],
                    "nargs": "?",
                    "help": "Additional arguments that can be send to csm agent"
                }
            ],
            "comm": {
                "type": "rest",
                "method": "delete",
                "target": "/{version}/csm/users/{username}",
                "version": "v1"
            },
            "output": {
                "success": "User deleted"
            }
        }
    ]
}